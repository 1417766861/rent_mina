.contanerbox{
    background: white;
    width: 100%;
    /* margin-top: 150rpx; */
    margin-bottom: 100rpx;
}
.card-dot {
    margin-left: 0;
}
::-webkit-scrollbar {
    display: none;
}
.contentbox{
    padding: 20rpx;
}

.house-desc{
    padding-bottom: 20rpx;
    display: flex;
    flex-direction: column;
    color: #666666;
    line-height: .9rem;
    font-size: 25rpx;
}
.view-count{
    color: #636e72;
    font-weight: lighter;
}

.col-class {
    width: 100%;
    display: block;
    height: 100%;
    margin: 0;
    pointer-events: none;
}
.action{
    margin-top: 20rpx;
}

.active-icon{
    color: #546E7A;
}
.icontext{
    font-size: 20rpx;
    padding: 10rpx 0;
    font-weight: lighter;
}
.comment-container{
    padding-bottom: 50rpx;
}

.commentbox{
    display: flex;
    box-sizing: border-box;
    flex-direction: row;
}
.avatar{
    width: 50rpx;
    height: 50rpx;
    border-radius: 50%;
}
.comment-none-box{
    display: flex;
    flex-direction: column;
    text-align: center;
}
.comment-none{
    text-align: center;
    align-self: center;
}
.info-group{
    font-size: 20rpx;
    display: flex;
    flex-direction: column;
    padding-left: 20rpx;
    width: 600rpx;
}
.topbox,.bottombox{
    display: flex;
    margin-top: 10rpx;
    flex-direction: row;
    justify-content: space-between;
}
.rightbox{
    display: flex;
    flex-direction: row-reverse;
}
.icon-box {
    box-shadow: 0 4rpx 20rpx 0 rgba(212,217,223,.5);
    padding: 20rpx;
    box-sizing: border-box;
    border-bottom: 1px solid #f1f2f6;
    display: flex;
    justify-content: space-between;
    border-radius: 50rpx;
}
.icon-box text{
    font-size: 35rpx;
    font-weight: lighter;
    margin: 0 20rpx;
}
.loading-gif{
 height: 100%;
 align-items: center;/** 垂直居中*/
 display: flex;
 justify-content: center; /** flex 属性， 水平居中**/
}
.loading-gif image{
    width: 400rpx;
    height: 400rpx;
}
.view-all{
    padding: 20rpx;
}
/*新样式*/
.house_item_box{
    padding-bottom: 20rpx;
    font-size: 25rpx;
    color: #666666;
}
.house_region{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}
.upload_time, .username{
  color: #ABAFBA;
  font-size: 25rpx;
}
.house_info{
    display: flex;
    flex-direction: column;
}
.item{
    display: flex;
    flex-direction: row;
    margin: 15rpx;
}
.item_name {
    width: 50%;
}
.detail-map {
    width: 80px;
    height: 80px;
    z-index:99999
}
.operation{
    width: 200rpx;
    display: flex;
    flex-direction: row;
    justify-content: right;
    border-radius: 20rpx;
    box-sizing: border-box;
    margin-left: auto;
}