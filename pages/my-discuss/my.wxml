<view class="mycontainer">
    <view class="itembox"
          wx:for="{{discusses}}" wx:key wx:for-item="discuss">
        <view class="publish-item">
            <view class="topbox" bindtap="ToDiscussDetail" data-discussid="{{discuss.id}}">
                <view class="left">
                    <text class="cuIcon-location text-green padding-right-xs"></text>
                    <text class="text-grey text-sm margin-right">{{discuss.region}} / {{discuss.address}}</text>
                    <text class="text-sm margin-lr-xs text-grey">{{discuss.create_time}}</text>
                </view>
                <view class="right">
                    <text class="cuIcon-attention text-green padding-right-xs"></text>
                    <text class="text-grey text-sm">浏览{{discuss.view_count}}</text>
                </view>
            </view>
            <view class="title text-grey one-row" bindtap="ToDiscussDetail" data-discussid="{{discuss.id}}"  data-discuss-id="{{discuss.id}}">
                {{discuss.title}}
            </view>
            <view bindtap="ToDiscussDetail" data-discussid="{{discuss.id}}" class="title text-grey one-row"  data-discuss-id="{{discuss.id}}">
                {{discuss.desc}}
            </view>
            <view class="text-right price  padding-xs">
                <text class="cuIcon-moneybagfill text-red" bindtap="ToDiscussDetail" data-discussid="{{discuss.id}}"></text>
                {{discuss.price}}
                <text class="cuIcon-deletefill text-yellow margin-left" bindtap="DeleteClick" data-discuss-id="{{discuss.id}}"></text>
            </view>
        </view>
    </view>
    <view class="empty" wx:if="{{discusses.length == 0}}">
        <image style="width: 200rpx;height: 200rpx" src="/image/empty-imgs/my-discuss.png"></image>
        <text class="margin-top text-grey">暂无记录，等你来发布啦！</text>
    </view>
</view>
