/* pages/publish/publish.wxss */
@import "../../icon/icon.wxss";
.publish-container{
    padding: 20rpx;
    box-sizing: border-box;
    width: 100%;
    box-shadow: 0 4rpx 20rpx 0 rgba(212,217,223,.5);
    display: flex;
    flex-direction: column;
    flex-wrap:wrap;
    margin-bottom: 100rpx;
}
.shadow {
        box-shadow: 0 4rpx 20rpx 0 rgba(212,217,223,.5);
}
.address-right{
    text-align: right;
}
.img {
    width: 100rpx;
    height: 50rpx;
}
.title {
    font-size: 25rpx;
    padding: 20rpx 0;
}
.add{
    height: 100%;
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}
.add-icon {
    height: 50rpx;
    width: 50rpx;
    margin-top: 10rpx;
}

.add-text {
    margin-top: 6rpx;
    font-size: 24rpx;
    color: #bfbfbf;
}

textarea{
  width: 100%;
  height:300rpx;
  max-height:300rpx;
  padding: 32rpx;
  font-size:14px;
  font-weight:400;
  color:rgba(51,51,51,1);
  line-height:40upx;
  background:rgba(248,248,248,1);
  border-radius:12rpx;
  box-sizing:border-box;
}
